<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jegge.test2.HitActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Klubba"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avstånd"
        android:id="@+id/textView2"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blåst"
        android:id="@+id/textView3"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/distanceText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Träff"
        android:id="@+id/textView4"
        android:layout_below="@+id/windText"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/distanceText"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windText"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/distanceText"
        android:layout_alignStart="@+id/distanceText"
        android:layout_alignRight="@+id/distanceText"
        android:layout_alignEnd="@+id/distanceText"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hitText"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/windText"
        android:layout_alignStart="@+id/windText"
        android:layout_alignRight="@+id/windText"
        android:layout_alignEnd="@+id/windText"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPARA"
        android:id="@+id/btnSaveHit"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/hitText"
        android:layout_alignRight="@+id/hitText"
        android:layout_alignEnd="@+id/hitText"
        android:layout_alignLeft="@+id/hitText"
        android:onClick="onClickBtn"
        android:layout_alignStart="@+id/hitText" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/clubText"
        android:layout_above="@+id/textView2"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:inputType="text" />
</RelativeLayout>
